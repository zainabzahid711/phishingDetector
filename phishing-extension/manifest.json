{
  "manifest_version": 3,
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }],
  "name": "PhishGuard",
  "version": "1.0",
  "permissions": [
    "activeTab",      
    "storage",       
    "webNavigation"  
  ],
  "host_permissions": [
    "http://localhost:5000/*", 
    "*://*/*"                  
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}